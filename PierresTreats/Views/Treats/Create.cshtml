@model PierresTreats.Models.Treat

@{
	ViewData["Title"] = "Create Treat";
	ViewData["Footer"] = "Views / Treats / Create Treat";
	Layout = "_Layout";
}

<h2>Add a new treat</h2>

<hr>

@using (Html.BeginForm())
{
	@Html.LabelFor(model => model.TreatDescription)
	@Html.TextBoxFor(model => model.TreatDescription)
	@Html.Label("Select flavor")
	@Html.DropDownList("FlavorId")
	<input type="submit" value="Add new treat" class="button is-primary" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>