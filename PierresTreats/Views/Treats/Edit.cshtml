@using PierresTreats.Models;
@using Microsoft.AspNetCore.Mvc.Rendering

@model PierresTreats.Models.Treat

@{
	ViewData["Title"] = "Edit Treat";
	ViewData["Footer"] = "Views / Treats / Edit";
	Layout = "_Layout";
}

<h2 class="is-size-2 has-text-justified">Edit Treat</h2>

<hr>

<nav class="breadcrumb" aria-label="breadcrumbs">
	<ul>
		<li><a href="/">Home</a></li>
		<li><a href="/Treats">Treats</a></li>
		<li class="is-active"><a href="/Flavors" aria-current="page">Edit Treat</a></li>
	</ul>
</nav>

<h4>Edit this treat: @Html.DisplayFor(model => model.TreatDescription)</h4>

@using (Html.BeginForm())
{
	@Html.HiddenFor(model => model.TreatId)

	@Html.LabelFor(model => model.TreatName)
	@Html.EditorFor(model => model.TreatName)
	
	@Html.LabelFor(model => model.TreatDescription)
	@Html.EditorFor(model => model.TreatDescription)

	@Html.Label("Select flavor")
	@Html.DropDownList("FlavorName")

	@*@foreach(var join in Model.JoinEntities)
	{
		<li>@join.Flavor.FlavorName</li>
	}*@


	<input class="button is-info" type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>