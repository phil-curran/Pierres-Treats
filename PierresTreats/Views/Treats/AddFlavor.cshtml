@model PierresTreats.Models.Treat

@{
	ViewData["Title"] = "Add Treat";
	ViewData["Footer"] = "Views / Treats / Add Flavor";
	Layout = "_Layout";
}

<h2 class="is-size-2 has-text-justified">Add a flavor</h2>

<hr/>

<nav class="breadcrumb" aria-label="breadcrumbs">
	<ul>
		<li><a href="/">Home</a></li>
		<li><a href="/Treats">Treats</a></li>
		<li class="is-active"><a href="/Flavors" aria-current="page">Add Flavor</a></li>
	</ul>
</nav>

<h4>Add a flavor to this treat: @Html.DisplayFor(model => model.TreatDescription)</h4>

@using (Html.BeginForm())
{
	@Html.HiddenFor(model => model.TreatId)

	@Html.Label("Select flavor")
	@Html.DropDownList("FlavorId")

	<input class="button is-info" type="submit" value="Save" />
}	

<p>@Html.ActionLink("Back to list", "Index")</p>